{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-console": 1,
        "semi": "always", // default btw
        "eqeqeq": [2, "smart"],
        "quotes": [2, "single"],
        "no-shadow": ["error", { "builtinGlobals": true }]
    }
}